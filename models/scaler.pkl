import pandas as pd
from sklearn.preprocessing import StandardScaler
import joblib
import os

# Load your data
df = pd.read_csv("employee_data.csv")  # Adjust path if needed

# Select features used for training
features = ['WorkHours', 'TasksCompleted', 'BreaksTaken', 'OvertimeHours', 'LeavesTaken', 'PerformanceRating']
X = df[features]

# Fit the scaler
scaler = StandardScaler()
scaler.fit(X)

# Save the fitted scaler
os.makedirs("models", exist_ok=True)
joblib.dump(scaler, "models/scaler.pkl")

print("âœ… scaler.pkl created and saved to models/")
