import pandas as pd
from sklearn.preprocessing import StandardScaler
import joblib
import os

# Load your CSV
df = pd.read_csv("employee_data.csv")  # adjust path if needed

# Features used for scaling
features = ['WorkHours', 'TasksCompleted', 'BreaksTaken', 'OvertimeHours', 'LeavesTaken', 'PerformanceRating']
X = df[features]

# Fit and save scaler
scaler = StandardScaler()
scaler.fit(X)

# Save the fitted scaler
os.makedirs("models", exist_ok=True)
joblib.dump(scaler, "models/scaler.pkl")

print("âœ… Fitted scaler.pkl saved to models/")
